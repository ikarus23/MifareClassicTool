<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewImortExportTool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.syss.MifareClassicTool.Activities.ImportExportTool"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linearLayoutImportExportTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonImportExportToolImportDump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/arrow_up"
            android:onClick="onImportDump"
            android:text="@string/action_import_dump" />

        <Button
            android:id="@+id/buttonImportExportToolExportDump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/arrow_down"
            android:onClick="onExportDump"
            android:text="@string/action_export_dump" />

        <!-- Separator -->
        <View
            android:id="@+id/separatorImportExportTool1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/buttonImportExportToolImportKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/arrow_up"
            android:onClick="onImportKeys"
            android:text="@string/action_import_keys" />

        <Button
            android:id="@+id/buttonImportExportToolExportKeys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/arrow_down"
            android:onClick="onExportKeys"
            android:text="@string/action_export_keys" />

        <!-- Separator -->
        <View
            android:id="@+id/separatorImportExportTool2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="13dp"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/buttonImportExportToolBackupAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@android:drawable/ic_menu_save"
            android:onClick="onBackupAll"
            android:text="@string/action_backup_all" />

        <!-- Separator -->
        <View
            android:id="@+id/separatorImportExportTool3"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="13dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/textViewImportExportToolInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_info"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="@string/text_import_export_tool_info" />

    </LinearLayout>

</ScrollView>