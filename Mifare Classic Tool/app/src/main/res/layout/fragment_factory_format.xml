<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.syss.MifareClassicTool.Fragments.FactoryFormatFragment"
    android:paddingTop="15dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:background="@color/background_material_dark">

    <RelativeLayout
        android:id="@+id/relativeLayoutFactoryFormat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:tag="write_block_layout">

        <TextView
            android:id="@+id/textViewWriteTatFactoryFormatInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/text_factory_format_info"
            android:theme="@style/Theme.AppCompat"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/buttonWriteTagFactoryFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat"
            android:layout_below="@+id/textViewWriteTatFactoryFormatInfo"
            android:text="@string/action_factory_format" />

    </RelativeLayout>

</RelativeLayout>